<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
       <% user.books.each do |book| %>
        <tr>
          <td><%= link_to(user) do %>
          <%= image_tag user.get_profile_image, size:'50x50' %>
          <% end %>
          <td>
            <%= link_to book_path(book) do %>
            <%= book.title %></td>
            <% end %>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>

        <tr>
          <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
          </td>
          <td>
          <%= link_to book_path(book) do %>
          <%= book.title %>
          <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>